            <%= form_tag profiles_path, :method => 'get', class: 'form-inline' do %>
              <div class="input-group">
                <%= search_field_tag :search, params[:search], type: "text", class: "form-control", size: "60", placeholder: "Company name" %>
                <span class="input-group-btn">
                  <%= submit_tag "", name: nil, class: "btn btn-default", type: "button" %>
