<p id="notice"><%= notice %></p>

<!-- Page Content -->
<div class="container" style="padding-top: 70px;">
  <div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
      <!-- Title -->
      <h1 style="font-size: 55px;"><%= @profile.title %></h1>

      <!-- Tags -->
      <p class="lead">
        <% @profile.tag_list.map do |t| %>
          <span class="label label-primary"><%= link_to t, tag_path(t), style: "color: white;" %></span>
        <% end %>
      </p>

      <hr>

      <!-- Date/Time -->
      <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @profile.created_at.strftime("%b %d, %Y") %></p>

      <hr>

      <%= image_tag @profile.avatar.url, class: "img-responsive show-image", alt: "profile image" %>

      <hr>

      <!-- Post Content -->
      <p class="lead"><%= @profile.preview %></p>
      <p><%= @profile.content %></p>

      <hr>
    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">
      
      <!-- Blog Search Well -->
      <div class="well" id="show-search">
        <h4>Search</h4>
        <%= form_tag profiles_path, :method => 'get', class: 'form-inline' do %>
          <div class="input-group">
            <%= search_field_tag :search, params[:search], type: "text", class: "form-control", size: "100%", placeholder: "Company name" %>
            <span class="input-group-btn">
              <%= submit_tag "", class: "btn btn-default" %>
            </span>
          </div>
        <% end %>
      </div>

      <!-- Blog Categories Well -->
      <div class="well">
        <h4>References</h4>
        <ul class="list-unstyled">
          <li>Website: <%= link_to @profile.url %></li>
          <li>Facebook: /company</li>
          <li>twitter: @company</li>    
          <li>Location: Nairobi, Kenya</li> 
        </ul>
      </div>

      <!-- Blog Categories Well -->
      <div class="well">
        <h4>Similar organizations</h4>
        <div class="row">
          <div class="col-lg-6">
            <ul class="list-unstyled">
              <% @profiles[0..3].each do |p|%>
                <li><%= link_to p.title %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-lg-6">
              <ul class="list-unstyled">
              <% @profiles[-4..-1].each do |p|%>
                <li><%= link_to p.title %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <!-- /.row -->
      </div>

    </div>

  </div>
  <!-- /.row -->
</div>
